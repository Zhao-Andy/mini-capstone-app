<h1>Our Products today:</h1>
<div class="container">
  <div class="row products-index">
    <% @products.each do |product| %>
    <div class="col-md-4 thumbnail">
      <%= link_to product.name, "/products/#{product.id}" %>
      <%= product.sale_message %>
      <%= product.total %>
      <img src="<%= product.image %>">
      <%= product.desc %>
    </div>
    <% end %>
  </div>
</div>
