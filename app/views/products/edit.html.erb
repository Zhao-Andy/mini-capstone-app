<h1>Here's the form to edit a product!</h1>
<%= form_tag("/products/#{@product.id}", method: "patch") do %>
  <%= label_tag(:name, "Name") %>
  <%= text_field_tag(:name, @product.name) %>
  <br>

  <%= label_tag(:price, "Price") %>
  <%= text_field_tag(:price, @product.price) %>
  <br>

  <%= label_tag(:image, "Image Link") %>
  <%= text_field_tag(:image, @product.image) %>
  <br>

  <%= label_tag(:desc, "Description") %>
  <%= text_field_tag(:desc, @product.desc) %>
  <br>

  <%= submit_tag("Edit") %>
<% end %>
